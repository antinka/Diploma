@model GameStore.ViewModels.FilterOrder

<div>
    <h4>FilterOrder</h4>
    <hr />
@using (Html.BeginForm("FilterOrders", "Order", FormMethod.Get, null))
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateTimeFrom)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.DateTimeFrom,new {@type = "date"})
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateTimeTo)
        </dt>

        <dd>
            @Html.TextBoxFor(model => model.DateTimeTo,new {@type = "date"})
        </dd>
    </dl>
    <input type="submit" value="Filter" class="btn btn-default"/>
} 
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrdersViewModel.First().UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersViewModel.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersViewModel.First().Cost)
        </th>
    </tr>

    @foreach (var item in Model.OrdersViewModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
        </tr>
    }
        </table>
</div>

