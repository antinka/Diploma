@using System.Web.Optimization
@using GameStore.Web.App_LocalResources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.csst=<%= DateTime.Now.Ticks %>" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink(GlobalRes.Games, "FilteredGames", "Game", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color: aliceblue">@Html.Action("CountGames", "Game") </li>

                        <li> @Html.ActionLink(GlobalRes.Basket, "BasketInfo", "Order")</li>
                        <li style="color: aliceblue">@Html.Action("CountGamesInOrder", "Order") </li>
                    

                    @if (User != null && User.IsInRole("Manager"))
                    {
                        <li> @Html.ActionLink(GlobalRes.Publishers, "GetAll", "Publisher")</li>
                        <li> @Html.ActionLink(GlobalRes.PlatformTypes, "GetAll", "PlatformType")</li>
                        <li> @Html.ActionLink(GlobalRes.Genres, "GetAll", "Genre")</li>
                        <li>@Html.ActionLink(GlobalRes.GetAllDeleteGames, "GetAllDeleteGames", "Game")</li>
                        <li> @Html.ActionLink(GlobalRes.Orders, "AllOrders", "Order")</li>
                    }

                    <li> @Html.ActionLink(GlobalRes.Shipper, "GetAll", "Shipper")</li>

                    @if (User != null && User.IsInRole("Administrator"))
                    {
                        <li> @Html.ActionLink(GlobalRes.Users, "GetAll", "User")</li>
                        <li> @Html.ActionLink(GlobalRes.Roles, "GetAll", "Role")</li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (User != null && User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(GlobalRes.PersonalArea, "PersonalArea", "Account")</li>
                        <li>@Html.ActionLink(GlobalRes.LogOut, "LogOut", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(GlobalRes.Register, "Register", "Account")</li>
                        <li> @Html.ActionLink(GlobalRes.Login, "Login", "Account")</li>
                    }

                    <li>@Html.ActionLink("ru", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["lang"] = "ru")</li>
                    <li> @Html.ActionLink("en", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["lang"] = "en")</li>
                </ul>
            </div>
        </div>
    </div>
    <div style="background-color: #222; height: 200px">

        <div style="float: left; margin-left: 20%">
            <p style="color: aliceblue; font-family: Trattatello; font-size: 100px" ;>Pay attention</p>
        </div>
        <div style="float: right; margin-right: 20%">
            <img src="~/Content/Images/GameOn_logo_red.png" alt="Games" height="200px" />
        </div>
    </div>

    <br />
    <div class="container body-content">
        <div class="row">
            <div class="col-sm-9">
                @RenderBody()
            </div>
            <div class="col-sm-3">
                @if (IsSectionDefined("rightSidebar"))
                {
                    @RenderSection("rightSidebar")
                }
                else
                {
                    <img src="~/Content/Images/games.jpg" alt="Games" height="200px" />
                }
            </div>
        </div>
        <hr />

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-4">
                        <div class="FooterHeader">
                            <img src="~/Content/Images/konvert.png" alt="GetInTouch" height="50px" /> <h6 class="footer-heading">@GlobalRes.GetInTouch</h6>
                        </div>
                            <form style="background: #E1F5A9; height: 300px">
                                <div class="form-group" style="width: 80%; margin-left: auto; margin-right: auto;">
                                    <label for="exampleInputName1">@GlobalRes.UserName</label>
                                    <input type="text" class="form-control" id="exampleInputName1" aria-describedby="emailHelp">
                                </div>
                                <div class="form-group" style="width: 80%; margin-left: auto; margin-right: auto;">
                                    <label for="exampleInputEmail1">Email</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                </div>
                                <div class="form-group" style="width: 80%; margin-left: auto; margin-right: auto;">
                                    <label for="exampleFormControlTextarea1">@GlobalRes.Body</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                </div>
                                <button style="display: block; margin-left: 55%;" type="submit" class="btn btn-default ">@GlobalRes.Submit</button>
                            </form>
                        </div>

                    <div class="col-md-4 col-sm-4">
                        <div class="FooterHeader">
                            <img src="~/Content/Images/tweet.png" alt="GetInTouch" height="50px" />  <h6 class="footer-heading"> Twitter @GlobalRes.updates </h6>
                        </div>
                        <div style="background: #CEF6F5; height: 300px">
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                    <a href="#"> http//text/text</a>
                                </p>
                                <hr/>
                            </div>
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                    <a href="#"> http//text/text</a>
                                </p>
                                <hr/>
                            </div>
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                    <a href="#"> http//text/text</a>
                                </p>
                                <hr/>
                            </div>
                            <button style="display: block; margin-left: 45%;" type="submit" class="btn btn-default ">@GlobalRes.FollowUs</button>
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-4">
                        <div class="FooterHeader">
                            <img src="~/Content/Images/BLOG-Logo-1.png" alt="FromBlog" height="50px" />  <h6 class="footer-heading"> Twitter @GlobalRes.FromBlog </h6>
                        </div>
                        <div style="background: #F2F5A9; height: 300px">
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                </p>
                                <hr/>
                            </div>
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                </p>
                                <hr/>
                            </div>
                            <div class="form-group" style="width: 80%; height: 24%; margin-left: auto; margin-right: auto;">
                                <br/>
                                <p align="justify" style="">
                                    text text text text text text text text text text text text
                                </p>
                                <hr/>
                            </div>
                            <button style="display: block; margin-left: 55%;" type="submit" class="btn btn-default ">@GlobalRes.VisitBlog</button>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/Scripts/gameStorejs.js"></script>
    </div>
</body>
</html>
