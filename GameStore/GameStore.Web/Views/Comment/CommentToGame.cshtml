@using GameStore.Web.App_LocalResources
@model GameStore.Web.ViewModels.CommentViewModel
<div id="results">
    @using (Ajax.BeginForm("CommentToGame", FormMethod.Post, new AjaxOptions { UpdateTargetId = "results" }))
    {
        <div class="form-horizontal">
            <hr />
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @if (Model.Quote != null)
            {
                <blockquote>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Quote, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </blockquote>
            }
  

            @if (Model.ParentCommentBody != null)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.ParentCommentBody, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ParentCommentBody, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Body, 10, 40, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.GameId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.GameKey, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.ParentCommentId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Quote, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value= @GlobalRes.Add class="btn btn-default" />
            </div>
        </div>

    }
</div>