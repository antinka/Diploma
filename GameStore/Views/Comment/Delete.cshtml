@model GameStore.ViewModels.CommentViewModel

@using (Html.BeginForm("Delete", "Comment"))
{
   

<div id="ModalViewDelete" class="modal-content">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.GameId)
    @Html.HiddenFor(model => model.GameKey)
    <div class="modal-body">
        <p>are you sure you want to delete this comment?</p>
        <p>
            @Html.DisplayNameFor(model => model.Name) :
            @Html.DisplayFor(model => model.Name)<br/>
            @Html.DisplayNameFor(model => model.Body) :
            @Html.DisplayFor(model => model.Body)
        </p>
            <input type="submit" value="Yes" class="btn btn-default" />
            <input type="button" value="No" onclick="$('#ModalViewDelete').hide()" class="btn btn-default" />
</div>
</div>
}
