@model IEnumerable<GameStore.ViewModels.GenreViewModel>

@{
    ViewBag.Title = "GetAll";
}

<h2>GetAll</h2>

<p>
    @Html.ActionLink("Create New", "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ParentGenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParentGenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { genreName = item.Name }) |
            @Html.ActionLink("Details", "Get", new { genreName = item.Name }) |
            @Html.ActionLink("Delete", "Remove", new { genreId = item.Id })
        </td>
    </tr>
}

</table>
