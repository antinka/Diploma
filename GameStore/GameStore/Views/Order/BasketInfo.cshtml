@using GameStore.App_LocalResources
@using GameStore.Payments.Enums
@model GameStore.ViewModels.OrderViewModel

@{
    ViewBag.Title = "BasketInfo";
}

@using (Html.BeginForm("UpdateShipper", "Order", FormMethod.Get, null))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.ShipperId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ShipperId, Model.ShipperList as SelectList, "", new { @class = "form-control" })
            <input type="submit" value= @GlobalRes.Choose class="btn btn-default" />
        </div>
    </div>

}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Game.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Price)
            </th>
        </tr>

            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Game.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
                <tr>
                    <td>
                        <div>
                            <a href='@Url.Action("Pay","Order", new { paymentType = PaymentTypes.Bank },null)' %>
                                <img src="~/Content/Images/Bank.png" alt="QQQQQ" height="80px" />
                            </a>
                            <a href='@Url.Action("Pay","Order", new { paymentType = PaymentTypes.Box })' %>
                                <img src="~/Content/Images/IBox.png" alt="QQQQQ" height="80px" />
                            </a>
                            <a href='@Url.Action("Pay","Order", new { paymentType = PaymentTypes.Visa })' %>
                                <img src="~/Content/Images/Visa.png" alt="QQQQQ" height="80px" />
                            </a>
                        </div>
                    </td>
                </tr>
        </table>
</div>